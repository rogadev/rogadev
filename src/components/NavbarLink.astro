---
const { link } = Astro.props
const currentPath = new URL(Astro.request.url).pathname.slice(1)
---

<a href={link} class:list={[{ 'bg-primary': currentPath === link }]}>
  <slot />
</a>

<style>
  a {
    display: block;
    padding: 0.5rem 1rem;
    color: inherit;
    text-decoration: none;
    border-radius: 5px;
  }

  a:hover {
    background-color: var(--primary);
    color: white;
  }

  .bg-primary {
    background-color: var(--primary);
    color: white;
  }
</style>
